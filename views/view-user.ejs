<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible"
              content="IE=edge">
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0">
        <title>Mr.Coffee's - Schedule Management App</title>
        <link href='https://fonts.googleapis.com/css?family=Lato'
              rel='stylesheet'>
        <link rel="stylesheet"
              href="/styles.css">
    </head>

    <body class="coffee-bg">

        <%- include('../partials/header'); %>

        <main>
            <section class="form">
                <h1 class="text-center">View User</h1>
                <div>
                    <div class="flex-box">
                        <p class="width100">First name: </p>
                        <p><%= user.firstname %></p>
                    </div>
                    <div class="flex-box">
                        <p class="width100">Last name: </p>
                        <p><%= user.lastname %></p>
                    </div>
                    <div class="flex-box">
                        <p class="width100">Email: </p>
                        <p><%= user.email %></p>
                    </div>
                    <div class="flex-box">
                        <p class="width100">Password: </p>
                        <p><%= user.password %></p>
                    </div>
                </div>
            </section>
        </main>

        <!-- footer -->
    </body>

</html>
